{
  "manifest_version": 2, // the format of the manifest, we will use version 2
  "name": "Focus", // the name of what our extension will be called and how it will be listed
  "version": "1.0", // the version helps Google keep track of updates. 1.0 will be a string
  "description": "Chrome Extention for Focusing in.",
  "icons": { "16": "mtn.png",
           "48": "mtn.png",
          "128": "mtn.png" },
    "content_scripts": [ // used to link our code in main.js
        {
            "matches": ["https://www.youtube.com/*"], // tells Chrome that this code only applies when in this website (YouTube)
            "js": ["./main.js"] // link our main.js code
        }
    ], // this field is an array in case we had multiple matches or JS files to link together   
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "A popup will come here."
    }
}

